# Server Configuration
PORT=3000
NODE_ENV=development

# Admin Authentication
ADMIN_PASSW=your-admin-password-here

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
AI_KEYS_SECRET=your-ai-keys-secret-here-min-32-chars

# MongoDB Configuration
USERDB=your-mongodb-username
PASSWDB=your-mongodb-password
MONGO_DB_NAME=AIStudyMate
MONGO_HOST=your-mongodb-host.mongodb.net
MONGO_APP_NAME=AIStudyMate

# Cookie Security
COOKIE_SECURE=false
TRUST_PROXY=1
FORCE_HTTPS=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=10

# AI Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
AI_LIMIT_FREE_SCAN=5
AI_LIMIT_FREE_VOICE=3
AI_LIMIT_FREE_CHAT=20
AI_LIMIT_PRO_SCAN=100
